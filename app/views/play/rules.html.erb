<% content_for(:title) { "Spielregeln - GGame" } %>

<div class="header">
  <h1>üìú Spielregeln</h1>
</div>

<div class="content">
  <% @options.each do |option| %>
    <% setting = option.option_setting %>
    <% next unless setting&.available_to_players %>
    
    <div class="rule-card">
      <div class="rule-header">
        <h3><%= option.name %></h3>
        <% if setting&.points&.positive? %>
          <span class="rule-badge positive">+<%= setting.points %> P</span>
        <% end %>
        <% if setting&.cost&.positive? %>
          <span class="rule-badge negative">-<%= setting.cost %> P</span>
        <% end %>
      </div>
      
      <% if setting&.rule_text.present? %>
        <p class="rule-text"><%= setting.rule_text %></p>
      <% else %>
        <p class="rule-text empty">Keine Beschreibung verf√ºgbar.</p>
      <% end %>
      
      <div class="rule-meta">
        <% if setting&.requires_photo %>
          <span class="meta-item">üì∑ Foto n√∂tig</span>
        <% end %>
        <% if setting&.requires_target %>
          <span class="meta-item">üéØ Posten w√§hlen</span>
        <% end %>
        <% if setting&.cooldown_seconds&.positive? %>
          <span class="meta-item">‚è±Ô∏è <%= setting.cooldown_minutes %> Min Cooldown</span>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <% if @options.select { |o| o.option_setting&.available_to_players }.empty? %>
    <div class="card" style="text-align: center; color: rgba(255,255,255,0.5);">
      <p>Keine Regeln verf√ºgbar.</p>
    </div>
  <% end %>
</div>

<style>
  .rule-card {
    background: rgba(255,255,255,0.05);
    border-radius: 12px;
    padding: 16px;
    margin-bottom: 12px;
    border-left: 4px solid #4CAF50;
  }
  
  .rule-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
    flex-wrap: wrap;
  }
  
  .rule-header h3 {
    font-size: 1rem;
    color: #4CAF50;
    margin: 0;
    flex-grow: 1;
  }
  
  .rule-badge {
    font-size: 0.75rem;
    padding: 3px 8px;
    border-radius: 12px;
    font-weight: bold;
  }
  
  .rule-badge.positive {
    background: rgba(76, 175, 80, 0.2);
    color: #4CAF50;
  }
  
  .rule-badge.negative {
    background: rgba(244, 67, 54, 0.2);
    color: #f44336;
  }
  
  .rule-text {
    color: rgba(255,255,255,0.85);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0 0 12px 0;
  }
  
  .rule-text.empty {
    color: rgba(255,255,255,0.4);
    font-style: italic;
  }
  
  .rule-meta {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }
  
  .meta-item {
    font-size: 0.75rem;
    color: rgba(255,255,255,0.5);
    background: rgba(255,255,255,0.05);
    padding: 4px 8px;
    border-radius: 4px;
  }
</style>

