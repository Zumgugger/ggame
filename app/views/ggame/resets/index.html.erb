<h1>Reset Options</h1>


<%= button_to 'Reset Mines to 0 for All Targets', reset_mines_ggame_resets_path, 
                method: :put, 
                data: { confirm: 'Are you sure you want to reset the mines to 0 for all targets?' }, 
                class: 'btn btn-warning' %>


<%= button_to 'Reset Target Count to 0 for All Targets', reset_count_ggame_resets_path, 
                method: :put, 
                data: { confirm: 'Are you sure you want to reset the target count to 0 for all targets?' }, 
                class: 'btn btn-warning' %>

<%= button_to 'Reset All Group Points', reset_group_points_ggame_resets_path, 
                method: :post, 
                data: { confirm: 'Are you sure you want to reset all group points to 0?' }, 
                class: 'btn btn-danger' %>


<%= button_to "Delete All Users", destroy_all_users_ggame_resets_path, 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete all users? This action cannot be undone." },
              class: "btn btn-danger" %>

<%= button_to "Delete All Groups", destroy_all_groups_ggame_resets_path, 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete all groups? This action cannot be undone." },
              class: "btn btn-danger" %>
